{
    "compilerOptions": {
      "outDir": "build/dist",
      "module": "esnext",
      "target": "es5",
      "lib": [
        "es2015",
        "es2017",
        "dom"
      ],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "preserve",
      "moduleResolution": "node",
      "rootDir": "src",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "importHelpers": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "resolveJsonModule": true,
      "skipLibCheck": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "isolatedModules": true,
      "noEmit": true
    },
    "exclude": [
      "node_modules",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts"
    ],
    "include": [
      "src"
    ]
  }